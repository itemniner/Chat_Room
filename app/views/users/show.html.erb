<h1>Welcome <%= current_user.name %></h1>
<% if current_user.profile_picture %>
<%= image_tag(current_user.profile_picture) %>
<%end%>
<div class="about_me">
  <% if current_user.about_me %>
<h3>About me: <%=current_user.about_me%></h3>
<% end %>
</div>

<%=link_to "Messages", "/user/messages" %> <br>
<%=link_to "Edit my profile", "/profile/edit" %>

<section class = "requested_rentals">
  <% if current_user.requested_rentals != [] %>
  <h3>Requested Rentals</h3>
  <table>
    <tr>
      <th>Name</th>
      <th>Starting</th>
      <th>Ending</th>
    </tr>
    <% current_user.requested_rentals.each do |rental| %>
    <tr>
      <td><p><%=link_to "#{rental.gear_item.name}", "/gear_items/#{rental.gear_item.id}" %> </p></td>
      <td><p><%= rental.start_date %> </p></td>
      <td><p><%= rental.end_date %> </p></td>
    </tr>
    <% end %>
  </table>
  <%end%>
</section>


