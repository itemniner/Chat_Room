<h1>Welcome <%= current_user.username %></h1>
<%= image_tag(current_user.profile_picture) %>
<div class="about_me">
<h3>About me: <%=current_user.about_me%></h3>
</div>

<%=link_to "Messages", "/user/messages" %>


<section class = "current_rentals">
  <h3>Current Rentals</h3>
  <table>
    <tr>
      <th>Name</th>
      <th>Starting</th>
      <th>Ending</th>
    </tr>
    <% current_user.current_rentals.each do |rental| %>
    <tr>
      <td><p><%= rental.gear_item.name %> </p></td>
      <td><p><%= rental.start_date %> </p></td>
      <td><p><%= rental.end_date %> </p></td>
    </tr>
    <% end %>
  </table>
</section>

