<% provide :head_tags do %>

    <meta name='turbolinks-visit-control' content='reload'>
    <script>
    document.addEventListener("DOMContentLoaded", function(){
        initMap(<%=@coordinates["latitude"]%>, <%=@coordinates["longitude"]%>, <%=@json_results%>)
    });
    </script>
<% end %>

<h1 align=center>Here are your search results:</h1>


<% @parsed_item_response.each do |gear_item| %>
  <div class="result">
    <p class="name"><%=link_to "#{gear_item["attributes"]["name"]}", "/gear_items/#{gear_item["attributes"]["id"]}" %></p>
    <p class="location">Located In: <%= gear_item["attributes"]["location"]%></p>
  </div>
<% end %>

<p>
  <div id="map"></div>
</p>
